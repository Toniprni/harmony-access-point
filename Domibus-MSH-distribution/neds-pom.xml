<?xml version="1.0" encoding="UTF-8"?>

<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <properties>
        <cargo-maven2-plugin.version>1.7.14</cargo-maven2-plugin.version>
    </properties>

    <parent>
        <groupId>eu.domibus</groupId>
        <artifactId>domibus</artifactId>
        <version>4.2.2</version>
        <relativePath>../neds-pom.xml</relativePath>
    </parent>
    <packaging>pom</packaging>
    <artifactId>domibus-distribution</artifactId>
	<name>Domibus MSH Distribution</name>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-assembly-plugin</artifactId>
                    <version>2.4</version>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

    <profiles>
        <profile>
            <id>default-plugins</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>make-assembly-default-plugins</id>
                                <configuration>
                                    <descriptors>
                                        <descriptor>src/main/assembly/default-plugins/default-fs-plugin.xml</descriptor>
                                        <descriptor>src/main/assembly/default-plugins/default-ws-plugin.xml</descriptor>
                                        <descriptor>src/main/assembly/default-plugins/default-jms-plugin.xml</descriptor>
                                    </descriptors>
                                </configuration>
                                <!-- bound to verify because we need to execute cargo-package first
                                    which is in pre-integration-test -->
                                <phase>verify</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>dss-extension</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>make-assembly-authentication-dss-extension</id>
                                <configuration>
                                    <descriptors>
                                        <descriptor>
                                            src/main/assembly/authentication-dss-extension/authentication-dss-extension.xml
                                        </descriptor>
                                    </descriptors>
                                </configuration>
                                <phase>verify</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>tomcat</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>

            <properties>
                <tomcat.version>9.0.30</tomcat.version>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.cargo</groupId>
                        <artifactId>cargo-maven2-plugin</artifactId>
                        <version>${cargo-maven2-plugin.version}</version>
                        <executions>
                            <execution>
                                <id>build-tomcat</id>
                                <goals>
                                    <goal>configure</goal>
                                    <goal>package</goal>
                                </goals>
                                <phase>pre-integration-test</phase>
                                <configuration>
                                    <container>
                                        <containerId>tomcat9x</containerId>
                                        <zipUrlInstaller>
                                            <url>
                                                https://ec.europa.eu/cefdigital/artifact/content/repositories/public/org/apache/tomcat/tomcat/${tomcat.version}/tomcat-${tomcat.version}.zip
                                            </url>
                                            <downloadDir>${project.basedir}/cargo/downloads</downloadDir>
                                            <extractDir>${project.basedir}/cargo/installs</extractDir>
                                        </zipUrlInstaller>
                                    </container>
                                    <packager>
                                        <outputLocation>
                                            ${project.build.directory}/artifacts/domibus-container
                                        </outputLocation>
                                    </packager>
                                    <configuration>
                                        <files>
                                            <file>
                                                <file>${project.basedir}/../Domibus-MSH-tomcat/src/main/conf/domibus</file>
                                                <todir>conf/domibus</todir>
                                            </file>
                                        </files>
                                    </configuration>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>make-assembly-tomcat</id>
                                <configuration>
                                    <descriptors>
                                        <descriptor>src/main/assembly/tomcat/tomcat-configuration-only.xml</descriptor>
                                        <descriptor>src/main/assembly/tomcat/tomcat-war.xml</descriptor>
                                        <descriptor>src/main/assembly/tomcat/tomcat-full.xml</descriptor>
                                    </descriptors>
                                </configuration>
                                <!-- bound to verify because we need to execute cargo-package first
                                    which is in pre-integration-test -->
                                <phase>verify</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>sample-configuration</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>make-assembly-sample-configuration</id>
                                <configuration>
                                    <descriptors>
                                        <descriptor>src/main/assembly/sampleconfiguration/sample-configuration-and-testing.xml</descriptor>
                                    </descriptors>
                                </configuration>
                                <!-- bound to verify because we need to execute cargo-package first
                                    which is in pre-integration-test -->
                                <phase>verify</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>database</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>make-assembly-sqlscripts</id>
                                <configuration>
                                    <descriptors>
                                        <descriptor>src/main/assembly/sqlscripts/sql-scripts.xml</descriptor>
                                    </descriptors>
                                </configuration>
                                <!-- bound to verify because we need to execute cargo-package first
                                    which is in pre-integration-test -->
                                <phase>verify</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>